<h2>Add Magasin</h2>

{{!-- form#monId ou form.maClass--}}
<form action="/magasins/add" class="card" method="POST" enctype="multipart/form-data">
    <label for="name">
        Name :
        <input type="text" name="name" id="name" valeur="{{magasin.name}}">
    </label>
    <label for="slug">
        Slug :
        <input type="text" name="slug" id="slug" valeur="{{magasin.slug}}">
    </label>
    <label for="photo">
        Photo :
        <input type="file" name="photo" id="photo" accept="image/gif, image/jpeg, image/png" valeur="{{magasin.photo}}">
    </label>
    <label for="description">
        Description :
        <textarea name="description" id="description">{{magasin.description}}</textarea>
    </label>
    <input type="submit" name="Ajout du magasin">

</form>